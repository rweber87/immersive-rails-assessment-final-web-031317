<h1>Edit an Appearance</h1>

<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>


Guest: <%= @appearance.guest.name %><br>
Episode: <%= @appearance.episode.date %>
<%= form_for @appearance do |f| %>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: (1..5) %>
  <%= f.submit %>
<% end %>
